{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "rust",
  "changelog-path": "CHANGELOG.md",
  "include-component-in-tag": false,
  "pull-request-header": "chore: release ${version}",
  "sequential-calls": true,
  "group-pull-request-title-pattern": "chore: release ${version}",
  "plugins": [
    "cargo-workspace",
    {
      "type": "linked-versions",
      "groupName": "reacher",
      "components": ["core", "cli", "backend", "sqs", "sdk-typescript", "sdk-golang"]
    }
  ],
  "packages": {
    "core": {
      "component": "core",
      "package-name": "check-if-email-exists",
      "path": "core",
      "skip-github-release": true
    },
    "cli": {
      "component": "cli",
      "package-name": "check-if-email-exists-cli",
      "path": "cli",
      "skip-github-release": true
    },
    "backend": {
      "component": "backend",
      "package-name": "reacher_backend",
      "path": "backend"
    },
    "sqs": {
      "component": "sqs",
      "package-name": "reacher_sqs",
      "path": "sqs",
      "skip-github-release": true
    },
    "sdks/typescript": {
      "component": "sdk-typescript",
      "release-type": "node",
      "package-name": "@oppulence/reacher-sdk",
      "path": "sdks/typescript",
      "skip-github-release": true
    },
    "sdks/golang": {
      "component": "sdk-golang",
      "release-type": "go",
      "package-name": "github.com/Oppulence-Engineering/check-if-email-exists/sdks/golang",
      "path": "sdks/golang",
      "skip-github-release": true
    }
  }
}

