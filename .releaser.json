{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "rust",
  "changelog-path": "CHANGELOG.md",
  "include-component-in-tag": false,
  "pull-request-header": "chore: release${scope} ${component} ${version}",
  "sequential-calls": true,
  "plugins": ["cargo-workspace"],
  "packages": {
    "core": {
      "component": "core",
      "package-name": "check-if-email-exists",
      "path": "core",
      "skip-github-release": true
    },
    "cli": {
      "component": "cli",
      "package-name": "check-if-email-exists-cli",
      "path": "cli",
      "skip-github-release": true
    },
    "backend": {
      "component": "backend",
      "package-name": "reacher_backend",
      "path": "backend"
    },
    "sqs": {
      "component": "sqs",
      "package-name": "reacher_sqs",
      "path": "sqs",
      "skip-github-release": true
    }
  }
}

